<!--Control Layer Part Bottom-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@id/k_ctrl_layer_part_bottom"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/k_bg_common"
  android:gravity="center_vertical"
  android:orientation="horizontal">

  <ImageButton
    android:id="@+id/part_bottom_left_ib"
    style="@style/CtrlLayer.ExtendButton"
    tools:ignore="ContentDescription"/>

  <TextView
    android:id="@id/k_position_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="3dp"
    android:gravity="center"
    android:maxLines="1"
    android:textColor="@android:color/white"/>

  <SeekBar
    android:id="@id/k_progress_bar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>

  <TextView
    android:id="@id/k_duration_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:layout_marginRight="3dp"
    android:gravity="center"
    android:maxLines="1"
    android:textColor="@android:color/white"/>

  <ImageButton
    android:id="@+id/part_bottom_right_ib"
    style="@style/CtrlLayer.ExtendButton"
    tools:ignore="ContentDescription"/>
</LinearLayout>